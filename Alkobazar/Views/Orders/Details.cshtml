@model Alkobazar.Models.DTOs.OrderDTO

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Order.Create_timestamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.Create_timestamp)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Order.Deadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.Deadline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Order.Order_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.Order_Number)
        </dd>

    </dl>
</div>

<div>
    <h4>Order Items</h4>
    <p>
        @Html.ActionLink("Add new", "Create", "Order_Items", new {orderId = Url.RequestContext.RouteData.Values["id"] }, null)
    </p>
    <hr />

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Product Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Order_Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.ActionLink("Remove", "Delete", "Order_Items", new { id = item.Id }, null)

                </td>
            </tr>
        }

    </table>


</div>


<p>
    @Html.ActionLink("Back to List", "Index")
</p>
